script(type="text/x-template")#reviews-container
    .reviews__content(v-if="render")
        .controls(class="reviews__controls round horizontal")
            .controls__item.controls__item--prev
                button.controls__link(
                    type="button"
                    @click.prevent="previous()")
                    +icon('arrow-down', 'controls__icon')
            .controls__item.controls__item--next
                button.controls__link(
                    type="button"
                    @click.prevent="next()")
                    +icon('arrow-down', 'controls__icon')
        .carousel(class="reviews__carousel")
            flickity(ref='flickity', :options='flickityOptions').carousel__list
                div.carousel__item.quote(
                    v-for="review in reviews"
                    :key="review.id"
                )
                    .carousel__text {{review.text}}
                    .carousel__desc.user
                        .user__photo-wr.carousel__user-photo-wr
                            .user__photo.carousel__user-photo(
                                :style="{ 'backgroundImage': `url(${review.photo})` }"
                                style="background-position: top center"
                            )
                        .carousel__info
                            .user__name.carousel__author {{review.author}}
                            .user__occ.carousel__occ {{review.occ}}