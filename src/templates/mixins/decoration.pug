mixin decoration(position)
    if position === 'top'
        .decoration
            svg.decoration__item.decoration__item(viewBox="0 0 1000 100"
            preserveAspectRatio="none")
                polygon(
                points="0,0 1000,0 500,100 0,0"
                )
    else if position === 'bottom'
        .decoration
            svg.decoration__item.decoration__item(viewBox="0 0 1000 100"
            preserveAspectRatio="none")
                polygon(
                points="0,0 0,100 1000,100 1000,0 500,100 0,0"
                )