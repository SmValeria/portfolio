.page {
    padding: 60px 0 40px;
    height: 100%;
}

.page__container {
    position: relative;
}

.page__title {
    font-size: 21px;
    font-weight: 700;
}

.page__maincontent {
    padding: 60px 0;
}

.page-enter-active, .page-leave-active {
    transition: opacity 0.7s, transform 0.7s;
}

.page-enter {
    transform: translateX(-100%);
    opacity: 0;
}
.page-leave-to {
    opacity: 0;
    transform: translateX(100%);
}