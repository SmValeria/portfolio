.hamburger {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 20Px;

    &--close {
        .hamburger__line-top {
            transform: translateY(8Px) rotate(45deg);
        }

        .hamburger__line-bottom {
            transform: translateY(-8Px) rotate(-45deg);
        }

        .hamburger__line-middle {
            opacity: 0;
        }
    }

    .hamburger__line {
        display: flex;
        width: 24Px;
        height: 4Px;
        background-color: $text-color;
        margin-bottom: 4Px;
        &:last-of-type {
            margin-bottom: 0;
        }
    }
}

