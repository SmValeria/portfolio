.thumbnail {
    position: absolute;
    width: 20%;
    height: 80.5%;
    bottom: 0;
    right: 0;
    overflow: hidden;

    @include desktop {
        width: 28%;
        height: 85%;
    }
    @include phones {
        display: none;
    }
}

.thumbnail__list {
    display: flex;
    flex-direction: column;
    width: 100%;
    position: absolute;
    top: 0;
    height: 100%;
    transition: transform 0.5s;
    will-change: transform;
}

.thumbnail__item {
    position: relative;
    cursor: pointer;
    width: 100%;
    flex-shrink: 0;
    background: center center/cover no-repeat;
    height: 25%;
    @include desktop {
        height: calc(100% / 3);
    }
    &:first-of-type {
        outline: 4px solid $main-color;
        outline-offset: -4px;
    }

    &::after {
        content: '';
        display: block;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background-color: rgba(85, 0, 242, 0.3);
        opacity: 0;
        transition: opacity 0.2s;
    }

    &:hover::after {
        opacity: 1;
    }

    &.active:hover::after {
        opacity: 0;
    }
}

.slide-move {
    transition: transform 0.5s;
}