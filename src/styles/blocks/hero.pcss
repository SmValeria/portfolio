.hero {
  padding-top: 50px;
  padding-bottom: 50px;
}

.hero__container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.hero__content {
  flex: 0.75;
  display: flex;
  justify-content: center;
  align-items: center;
  @include desktop {
    flex: 0.5;
  }
}

.hero__scroll-down {
  display: flex;
  align-items: center;
  justify-content: center;

  @include tablets {
    display: none;
  }
}

