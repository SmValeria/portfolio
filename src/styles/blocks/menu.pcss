.menu__list {
  display: flex;
  align-items: center;
}

.menu__item {
  margin: 10px 60px 10px 0;
  transition: text-shadow 0.2s;
  &:last-of-type {
    margin-right: 0;
  }

  &:hover {
    text-shadow:  0.02em 0 0 currentColor,
                  -0.02em 0 0 currentColor,
                  0 0.02em 0 currentColor,
                  0 -0.02em 0 currentColor;
  }

}


