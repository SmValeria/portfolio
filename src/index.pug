<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Portfolio | main page
        link(rel="shortcut icon" href=require(`images/favicon.png`))
    body
        .wrapper
            .maincontent
                .welcome-section
                    include ./sections/hero-parallax
                    section.hero.fullscreen-section.section#hero
                        .container.hero__container
                            header.hero__header.header
                                .container.header__container
                                    div(class=`header__logo`)
                                        .logo
                                            a.logo__link(href="#") SV
                                    +nav(`header`, menu)
                                    +socials(`header`, socials)
                                    +hamburger('header__hamburger')
                            .hero__content
                                include ./sections/main-info
                            .hero__scroll-down
                                +scroll-down('about')
                    include ./sections/about
                include ./sections/experience
                section.work.section#work
                    .container.work__container
                        h2.title.work__title Мои работы
                        #slider-component
                //-.contacts-section(
                //-style=`background-image: url('${require('./images/content/budda.jpg')}')`)
                .contacts-section
                    include ./sections/budda-parallax
                    section.reviews.section#reviews
                        +decoration('top')
                        .container.reviews__container
                            .reviews__top
                                h2.title.reviews__title Что обо мне говорят
                                +controls('reviews__controls round horizontal')
                            +carousel('reviews__carousel', reviewsSlider)
                    section.contacts.section#contacts
                        .container.contacts__container
                            h2.title.contacts__title Связаться со мной
                            +form('contacts__form form')
                include ./sections/footer
            .mobile-menu
                +hamburger('mobile-menu__hamburger hamburger--close')
                +nav(`mobile-menu`, menu)
                +socials(`mobile-menu`, socials)

        include ./templates/entry


