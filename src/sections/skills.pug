.skills__section
    h4.skills__header Front-end
    ul.skills__list
        each skill in front
            li.skills__item(style="width: 100px; height: 100px")
                svg(viewBox="0 0 100 100").progress
                    circle(r="40" cx="50" cy="50").progress__circle.progress__circle-under
                    circle(r="40" cx="50" cy="50"
                    stroke='url(#gradient)'
                    transform="rotate(-180 50 50)"
                    stroke-dashoffset="200").progress__circle.progress__circle-above
                    linearGradient#gradient(x1="0%" y1="0%" x2="100%" y2="0%")
                        stop(offset="0%" color-stop="#5500f2")
                        stop(offset="100%" color-stop="#8f00ef")

